	TERM irrelevant := (0, 1) (30, 1) (40, 0);
	TERM required := (20, 0) (40, 1) (60, 1) (70, 0);
	TERM highly_relevant := (60, 0) (70, 1) (100, 1);
END_FUZZIFY

