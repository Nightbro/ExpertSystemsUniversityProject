FUZZIFY relevant_experience
    TERM non_existing := (0, 1) (2, 1) (5, 0);
    TERM beginner := (5, 0) (30, 1) (40, 0);
    TERM intermediate := (30, 0) (40, 1) (60, 1) (70, 0);
    TERM advanced := (60, 0) (70, 1) (100, 1);
    TERM expert := (80, 0) (90, 1) (100, 1);
END_FUZZIFY

